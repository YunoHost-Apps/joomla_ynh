{
    "name": "Joomla",
    "id": "joomla",
    "packaging_format": 1,
    "description": {
        "en": "Joomla! is an award-winning content management system."
    },
    "url": "https://www.joomla.org",
    "license": "GPL-2.0-only",
    "version": "3.8.7",
    "maintainer": {
        "name": "Anmol Sharma",
        "email": "anmol@datamol.org"
    },
    "requirements": {
        "yunohost": ">> 2.5.6"
    },
    "multi_instance": true,
    "services": [
        "nginx",
        "php5-fpm",
        "mysql"
    ],
    "arguments": {
        "install" : [
            {
                "name": "domain",
                "type": "domain",
                "ask": {
                    "en": "Choose a domain name for Joomla"
                },
                "example": "example.com"
            },
            {
                "name": "path",
                "type": "path",
                "ask": {
                    "en": "Choose a path for Joomla"
                },
                "example": "/example",
                "default": "/joomla"
            },
            {
                "name": "username",
                "ask": {
                    "en": "Admin username"
                },
                "example": "john"
            },
            {
                "name": "email",
                "ask": {
                    "en": "Admin email"
                },
                "example": "admin@example.com"
            },
            {
                "name": "password",
                "type": "password",
                "ask": {
                    "en": "Password for the admin account (At least 6 characters long)"
                }
            },
            {
                "name": "is_public",
                "type": "boolean",
                "ask": {
                    "en": "Is it a public application?"

                },
                "default": true
            }
        ]
    }
}
